{
  "name": "tak",
  "version": "0.1.0",
  "description": "Git-native task management for agentic workflows. Provides Claude skills for task tracking, epic planning, /tak work-loop execution, and multi-agent coordination via tak CLI.",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "tak reindex 2>/dev/null || true",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "tak mesh join --format minimal >/dev/null 2>/dev/null || true",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "tak mesh leave --format minimal >/dev/null 2>/dev/null || true",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
